{
  "openapi": "3.0.0",
  "info": {
    "title": "Projete Api",
    "description": "Tasks manager api.",
    "contact": {
      "email": "flaviopds.jr@gmail.com"
    },
    "version": "1.0"
  },
  "servers": [
    {
      "url": "https://localhost:8080",
      "description": "Local server"
    }
  ],
  "paths": {
    "/tasks/list": {
      "get": {
        "summary": "List all tasks.",
        "x-crudOperationSemantics": "read-multi",
        "x-crudResourceType": "task",
        "description": "Will be responsible to list all tasks.",
        "tags": [
          "Tasks"
        ],
        "responses": {
          "201": {
            "description": "List Tasks",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "description": {
                        "type": "string"
                      },
                      "status": {
                        "type": "string"
                      }
                    }
                  }
                },
                "examples": {
                  "task": {
                    "value": [
                      {
                        "id": "1222deaf-fe2e-444d-8e97-56ed98f254a3",
                        "description": "Pay the credit card bill",
                        "status": "PENDING"
                      },
                      {
                        "id": "9874554dksa-wew8-asdd-87sa-8798454524",
                        "description": "Walk the dog",
                        "status": "DOING"
                      },
                      {
                        "id": "654218weeer-dasd-8972-3245-984214587b3",
                        "description": "Go to the mall",
                        "status": "DONE"
                      }
                    ]
                  }
                }
              }
            }
          }
        }
      }
    },
    "/tasks/create": {
      "post": {
        "summary": "Create a new task.",
        "x-crudOperationSemantics": "create",
        "x-crudResourceType": "task",
        "description": "Will be responsible for registering a new task.",
        "tags": [
          "Tasks"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "description": {
                    "type": "string"
                  }
                }
              },
              "examples": {
                "task": {
                  "value": {
                    "description": "Go to the market to buy groceries"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "description": "Created"
                    }
                  }
                },
                "examples": {
                  "task": {
                    "value": {
                      "id": "1222deaf-fe2e-444d-8e97-56ed98f254a3",
                      "description": "Go to the market to buy groceries",
                      "status": "PENDING"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/tasks/update/{id}": {
      "put": {
        "summary": "Update a task description.",
        "x-crudOperationSemantics": "update",
        "x-crudResourceType": "task",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "string"
            },
            "required": true,
            "description": "task id"
          }
        ],
        "description": "Will be responsible to change a task description.",
        "tags": [
          "Tasks"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "description": {
                    "type": "string"
                  }
                }
              },
              "examples": {
                "task": {
                  "value": {
                    "description": "Pay the electricity bill"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Updated",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "description": {
                      "type": "string"
                    },
                    "status": {
                      "type": "string"
                    }
                  }
                },
                "examples": {
                  "task": {
                    "value": {
                      "id": "1222deaf-fe2e-444d-8e97-56ed98f254a3",
                      "description": "Pay the electricity bill",
                      "status": "DONE"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Task do not exists!"
          }
        }
      }
    },
    "tasks/update/status/{id}": {
      "patch": {
        "summary": "Update a task status.",
        "x-crudOperationSemantics": "update",
        "x-crudResourceType": "task",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "string"
            },
            "required": true,
            "description": "task id"
          }
        ],
        "description": "Will be responsible to update a task status.",
        "tags": [
          "Tasks"
        ],
        "requestBody": {
          "description": "Status values available, PENDING, DOING, DONE",
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "status": {
                    "type": "string"
                  }
                }
              },
              "examples": {
                "task": {
                  "value": {
                    "status": "DONE"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Updated status",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "description": {
                      "type": "string"
                    }
                  }
                },
                "examples": {
                  "task": {
                    "value": {
                      "id": "1222deaf-fe2e-444d-8e97-56ed98f254a3",
                      "description": "Go to the course",
                      "status": "DONE"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid Status"
          },
          "404": {
            "description": "Task do not exists!"
          }
        }
      }
    },
    "/tasks/delete/{id}": {
      "delete": {
        "summary": "Delete a existent task.",
        "x-crudOperationSemantics": "delete",
        "x-crudResourceType": "task",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "string"
            },
            "required": true,
            "description": "task id"
          }
        ],
        "description": "Will be responsible to delete a task.",
        "tags": [
          "Tasks"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "description": {
                    "type": "string"
                  }
                }
              },
              "examples": {
                "task": {
                  "value": {
                    "description": "Go to the gym"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Deleted",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "description": "Task Deleted"
                    }
                  }
                },
                "examples": {
                  "task": {
                    "value": {
                      "message": "Task Deleted"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Task do not exists!"
          }
        }
      }
    }
  }
}